<%- include('../shared/views/start.ejs') %>
    <%- include('../shared/views/navigation.ejs') %>
        <main>
            <section class="page-wrapper">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="post post-single">
                                <h2 class="post-title">
                                    <%= note.title %>
                                </h2>
                                <div class="post-meta">
                                    <ul>
                                        <li>
                                            <i class="ion-calendar"></i>
                                            <%= note.createdAt %>
                                        </li>
                                    </ul>
                                </div>
                                <div class="post-thumb">
                                    <div class="post-content post-excerpt">
                                        <p>
                                            <span>Priority: </span>
                                            <%= note.priority %>
                                        </p>
                                        <p>
                                            <span>Description: </span>
                                            <%= note.description %>
                                        </p>
                                        <br />
                                        <% if (note.isImportant===true) { %>
                                            <%- include('../shared/remove_as_important_note.ejs', { note: note,
                                                fromView: 'NOTE_DETAILS' }) %>
                                                <% } else { %>
                                                    <%- include('../shared/mark_as_important_note.ejs', { note: note,
                                                        fromView: 'NOTE_DETAILS' }) %>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </section>
        </main>
        <%- include('../shared/views/end.ejs') %>